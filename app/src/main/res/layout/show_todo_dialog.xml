<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <EditText
            android:id="@+id/et_text"
            android:inputType="textCapWords"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:hint="@string/todo_text"
            android:enabled="false"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_edit_todo"
            android:layout_marginEnd="8dp"/>

    <ImageView
            android:id="@+id/iv_edit_todo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_edit_black_24dp"
            app:layout_constraintTop_toTopOf="@+id/et_text"
            app:layout_constraintBottom_toBottomOf="@+id/et_text"
            />

    <TextView
            android:id="@+id/tv_created_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/iv_edit_date"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/et_text"
            />

    <ImageView
            android:id="@+id/iv_edit_date"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_edit_black_24dp"
            app:layout_constraintTop_toTopOf="@+id/tv_created_date"
            app:layout_constraintBottom_toBottomOf="@+id/tv_created_date"
            />

</android.support.constraint.ConstraintLayout>